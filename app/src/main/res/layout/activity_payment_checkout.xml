<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/headerCheckout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageButton
            android:id="@+id/btnBackCheckout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Quay lại"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="@color/neutral_text" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán QR"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/neutral_text"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerCheckout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/qrContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin chuyển khoản"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/neutral_text"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số tiền: --₫"
            android:textStyle="bold"
            android:textColor="@color/primary_red"
            android:layout_marginBottom="8dp"/>

        <TextView android:id="@+id/tvBankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/neutral_text"
            android:textStyle="bold"
            android:text="Ngân hàng" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">
            <TextView android:id="@+id/tvAccountNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/neutral_text"
                android:textIsSelectable="true"
                android:text="Số tài khoản" />

            <Button
                android:id="@+id/btnCopyAccount"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:backgroundTint="@color/bgColor"
                android:minWidth="72dp"
                android:text="Copy"
                android:textColor="@color/neutral_text" />
        </LinearLayout>
        <TextView android:id="@+id/tvAccountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/neutral_text"
            android:text="Chủ tài khoản" />
        <TextView android:id="@+id/tvBranch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/neutral_text"
            android:text="Chi nhánh" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">
            <TextView android:id="@+id/tvNote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/primary_red"
                android:textStyle="bold"
                android:textIsSelectable="true"
                android:text="Nội dung CK" />
            <Button
                android:id="@+id/btnCopyNote"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="72dp"
                android:text="Copy"
                android:backgroundTint="@color/bgColor"
                android:textColor="@color/neutral_text"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgQr"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="QR thanh toán"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvQrFallback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/neutral_text"
            android:text="Không có QR. Vui lòng chuyển khoản theo thông tin trên và nhập đúng Nội dung CK để hệ thống đối soát tự động."
            android:paddingTop="4dp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tvQrCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hết hạn sau: --:--"
            android:textColor="@color/neutral_subtext"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">
            <Button
                android:id="@+id/btnIHavePaid"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:minWidth="0dp"
                android:text="Tôi đã thanh toán"
                android:backgroundTint="#16A34A"
                android:textColor="@android:color/white" />
            <Space
                android:layout_width="12dp"
                android:layout_height="1dp" />
            <Button
                android:id="@+id/btnRegenerateQr"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:minWidth="0dp"
                android:text="Tạo lại QR"
                android:backgroundTint="#DC2626"
                android:textColor="@android:color/white" />
        </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Loading overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true"
            android:layout_gravity="center" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
