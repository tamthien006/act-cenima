<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/bg_movie_card"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/comboIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/bg_tab_unselected"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_gift_orange" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/comboName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Combo 1 Người"
            android:textColor="@color/neutral_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comboDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="1 Bắp Ngọt 60oz + 1 Coca 32oz"
            android:textColor="@color/neutral_subtext"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/comboPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="89.000₫"
            android:textColor="@color/primary_red"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSelectCombo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DC2626"
        android:paddingStart="24dp"
        android:paddingTop="10dp"
        android:paddingEnd="24dp"
        android:paddingBottom="10dp"
        android:text="Chọn"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>

