<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_movie_card"
    android:padding="16dp"
    android:layout_marginBottom="16dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Left side: Icon and discount -->
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_voucher_icon"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_gift"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/tvVoucherDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="50,000₫"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Right side: Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvVoucherTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Giảm 50K cho vé đầu tiên"
                    android:textColor="@color/neutral_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tvVoucherPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_chip_grey"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="500 điểm"
                    android:textColor="@color/neutral_text"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvVoucherDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Áp dụng cho thành viên mới, giảm 50,000₫ cho lần đặt vé đầu tiên"
                android:textColor="@color/neutral_subtext"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvVoucherCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Mã: WELCOME50"
                android:textColor="@color/neutral_text"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvVoucherExpiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="HSD: 31/12/2025"
                android:textColor="@color/neutral_subtext"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnUseVoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="end"
                android:background="@drawable/bg_primary_button"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:text="Sử dụng"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

