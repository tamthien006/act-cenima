<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAccountUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xin chào, Thành viên"
                        android:textColor="@color/neutral_text"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAccountUserEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="user@example.com"
                        android:textColor="@color/neutral_subtext"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng xuất"
                    android:textColor="@color/neutral_text"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:drawableEnd="@drawable/ic_back"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/neutral_text" />
            </LinearLayout>

            <!-- Membership Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_membership_card"
                android:padding="20dp"
                android:layout_margin="20dp"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Membership Rank -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_star"
                            android:tint="@color/white"
                            android:background="@drawable/bg_circle_icon"
                            android:padding="8dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hạng thành viên"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:alpha="0.9" />

                            <TextView
                                android:id="@+id/tvMemberLevel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vàng"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Points -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_trophy"
                            android:tint="@color/white"
                            android:background="@drawable/bg_circle_icon"
                            android:padding="8dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Điểm tích lũy"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:alpha="0.9" />

                            <TextView
                                android:id="@+id/tvPoints"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1.250 điểm"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Tickets Viewed -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_ticket"
                            android:tint="@color/white"
                            android:background="@drawable/bg_circle_icon"
                            android:padding="8dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số vé đã xem"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:alpha="0.9" />

                            <TextView
                                android:id="@+id/tvTicketsViewed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12 vé"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Progress Bar -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Tiến độ lên hạng tiếp theo"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:alpha="0.9" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    android:progressTint="@color/white"
                    android:progressBackgroundTint="@color/white"
                    android:progressBackgroundTintMode="multiply"
                    android:max="100"
                    android:progress="25" />

                <TextView
                    android:id="@+id/tvProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="1.250 / 5.000"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:alpha="0.9" />
            </LinearLayout>

            <!-- Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="4dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/tabVouchers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/bg_tab_selected"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/iconTabVouchers"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_gift"
                        android:tint="@color/tab_active" />

                    <TextView
                        android:id="@+id/tvTabVouchers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Voucher của tôi"
                        android:textColor="@color/tab_active"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabHistory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/bg_tab_unselected"
                    android:padding="12dp"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:id="@+id/iconTabHistory"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_ticket"
                        android:tint="@color/neutral_subtext" />

                    <TextView
                        android:id="@+id/tvTabHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Lịch sử đặt vé"
                        android:textColor="@color/neutral_subtext"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Content Area -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingBottom="100dp">

                <!-- Vouchers Container -->
                <LinearLayout
                    android:id="@+id/vouchersContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible" />

                <!-- History Container -->
                <LinearLayout
                    android:id="@+id/historyContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

